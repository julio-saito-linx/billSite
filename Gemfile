  gem 'sass-rails'
  gem 'uglifier'
end

group :development, :test do
  gem 'rspec-rails'
  gem 'pry'
  gem 'awesome_print'
  gem 'guard-rspec'
end

group :test do
  gem 'capybara'
  gem 'rb-inotify'
  gem 'libnotify'
  gem 'guard-spork'
  gem 'spork'
end

