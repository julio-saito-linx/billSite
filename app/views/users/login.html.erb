<%= form_tag users_validate_login_path do %>
  <p>
    <%=label_tag :email, t("labels.user.email") %>
    <%=text_field_tag :email %>
  </p>
  <p>
    <%=label_tag :password, t("labels.user.password") %>
    <%=password_field_tag :password %>
  </p>
  <p>
    <%=submit_tag t("labels.login.submit_login") %>
  </p>
<%end%>
